<a class="anchor" id="giftcard"></a>
<section class="container-fluid certificate">
  <div class="container-center-xl">
    <div class="media-container-row row-eq-height section-title">
      <div class="col-12 remove-col-md-paddings">
        <h2 class="text-xl-center">[[+titleBlockGiftCard]]</h2>
      </div>
    </div>
    <div class="media-container-row align-content-stretch">
      <div class="col-12 col-md-5 col-xl-6 order-md-1 image-col">
        <div class="h-100"><img class="img-fluid" src="[[+giftcardImage]]" alt="Подарочный сертификат"></div>
      </div>
      <div class="col-12 col-md-7 col-xl-6 order-md-2 text-col remove-sm-right-padding">
        <div class="text-outer h-100">
          <div class="text-inner">
            <div class="text-content font-size-14px">
              [[+giftcardText]]
            </div>
            <div class="d-flex button-buy">
              <button class="btn-flat-white mx-auto" onclick="orderCertificate();">КУПИТЬ</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>